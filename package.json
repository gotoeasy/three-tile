{
	"name": "three-tile-packages",
	"private": false,
	"version": "0.9.0",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "dist/three-tile.umd.cjs",
	"module": "dist/three-tile.js",
	"types": "./dist/three-tile.es.d.ts",
	"exports": {
		".": {
			"import": "./dist/three-tile.js",
			"require": "./dist/three-tile.umd.cjs",
			"types": "./dist/three-tile.es.d.ts"
		}
	},
	"description": "A lightweight tile map using threejs",
	"license": "GPL-3.0",
	"author": {
		"name": "GuoJF",
		"email": "hz_gjf@163.com"
	},
	"keywords": [
		"three",
		"gis",
		"tile",
		"map",
		"3D",
		"cesium"
	],
	"scripts": {
		"dev1": "vite --config vite.config.dev.ts",
		"lib": "tsc && vite build  --config vite.config.lib.ts",
		"dev:demo": "npm run dev --workspace=packages/demo",
		"build:lib": "npm run build --workspace=packages/lib",
		"build:plugin": "npm run build --workspace=packages/plugin",
		"preview": "vite preview --config vite.config.demo.ts",
		"docs": "typedoc src --out ./docs",
		"test": "vitest"
	},
	"devDependencies": {
		"@types/node": "^20.2.3",
		"@types/offscreencanvas": "^2019.7.0",
		"@types/three": "^0.165.0",
		"typedoc": "^0.25.13",
		"typescript": "^5.4.5",
		"vite": "^5.4.11",
		"vite-plugin-dts": "^4.0.3",
		"vitest": "^2.0.5"
	},
	"peerDependencies": {
		"three": ">=0.165.0"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"workspaces": [
		"packages/*"
	]
}
